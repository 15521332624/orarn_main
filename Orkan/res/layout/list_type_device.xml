<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="99dp"
    android:background="@color/white"
    android:orientation="horizontal"
     >

    <ImageView
        android:id="@+id/device_pic"
        android:layout_width="132dp"
        android:layout_height="99dp"
        android:layout_centerVertical="true"
        android:src="@drawable/devicelist_im" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/device_pic"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/device_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orkan"
            android:textColor="@color/theme_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/device_introdue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orkan是一家专门做净化器的公司"
            android:textColor="@color/theme_tx_color"
            android:layout_marginTop="3dip"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/device_list_rightim"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:src="@drawable/timing_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/device_list_rightim"
                android:text="立即绑定"
                android:textColor="@color/theme_tx_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>