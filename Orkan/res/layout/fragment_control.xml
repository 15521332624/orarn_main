<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_base_title" />

    <RelativeLayout
        android:id="@+id/control_relayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp" >

        <ImageView
            android:id="@+id/control_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fengjistate" />

        <TextView
            android:id="@+id/control_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/control_image"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/control_image"
            android:text="@string/control_fengstate"
            android:textColor="@color/theme_tx_color"
            android:textSize="15sp" />

        <View
            android:id="@+id/feng_state_1"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/control_image"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <View
            android:id="@+id/feng_state_2"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/feng_state_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <View
            android:id="@+id/feng_state_3"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/feng_state_2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <View
            android:id="@+id/feng_state_4"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/feng_state_3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <View
            android:id="@+id/feng_state_5"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/feng_state_4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <View
            android:id="@+id/feng_state_6"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_below="@id/feng_state_5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_rect"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/control_door_im"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/selector_butn_toggle"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />

        <TextView
            android:id="@+id/control_door_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/control_image"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/control_door_im"
            android:text="@string/fr_c_01"
            android:textColor="@color/theme_tx_color"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/control_open_im"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/control_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/switch_close" />

        <TextView
            android:id="@+id/fengsu_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/control_tx"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:paddingBottom="20dp"
            android:text="@string/fengsu1"
            android:textColor="@color/theme_tx_color"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/updownli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/control_open_im"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingLeft="0dp" >

            <ImageView
                android:id="@+id/feng_down"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/feng_down" />

            <ImageView
                android:id="@+id/feng_up"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/feng_up" />
        </LinearLayout>

        <ImageView
            android:id="@+id/control_wind_im"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/updownli"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/control_wind1" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/control_wind_im"
            android:background="@color/theme_line_color" />

        <TextView
            android:id="@+id/inside_filter_tx"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/line1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/control_inside_filter"
            android:textColor="@color/theme_tx_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/inside_filter_warning"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cha"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/control_filter_warning"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <com.example.orkan.view.CustomProgressBar
            android:id="@+id/inside_filter_progressbar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/line1"
            android:layout_marginRight="55dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/inside_filter_tx"
            app:isShowDesc="true"
            app:max="100"
            app:progress="0"
            app:progressDesc=""
            app:progressRadius="8dp" />

        <TextView
            android:id="@+id/middle_filter_tx"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/inside_filter_tx"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/control_middle_filter"
            android:textColor="@color/theme_tx_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/middle_filter_warning"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/inside_filter_tx"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cha"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/control_filter_warning"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <com.example.orkan.view.CustomProgressBar
            android:id="@+id/middle_filter_progressbar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/inside_filter_tx"
            android:layout_marginRight="55dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/middle_filter_tx"
            app:isShowDesc="true"
            app:max="100"
            app:progress="0"
            app:progressDesc=""
            app:progressRadius="8dp" />

        <TextView
            android:id="@+id/outside_filter_tx"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/middle_filter_tx"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="@string/control_outside_filter"
            android:textColor="@color/theme_tx_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/outside_filter_warning"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/middle_filter_tx"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cha"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/control_filter_warning"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <com.example.orkan.view.CustomProgressBar
            android:id="@+id/outside_filter_progressbar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/middle_filter_progressbar"
            android:layout_marginRight="55dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/outside_filter_tx"
            app:isShowDesc="true"
            app:max="100"
            app:progress="0"
            app:progressDesc=""
            app:progressRadius="8dp" />

        <ImageView
            android:id="@+id/control_wind_im1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/outside_filter_progressbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:paddingRight="3dip"
            android:scaleType="fitCenter"
            android:src="@drawable/control_wind1" />

        <ImageView
            android:id="@+id/control_wind_im2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/control_wind_im1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/control_feng0" />

        <ImageView
            android:id="@+id/control_newopen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/control_wind_im2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/switch_close"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/control_wind_im3"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:layout_below="@id/control_newopen"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/control_wind3" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/control_wind_im3"
            android:background="@color/theme_line_color" />

        <RelativeLayout
            android:id="@+id/control_timing_li"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line2"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/control_timing_li2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="6dp" >

                <ImageView
                    android:id="@+id/timing_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/control_timing" />

                <TextView
                    android:id="@+id/control_timing_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/timing_image"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/timing_image"
                    android:text="@string/control_timing"
                    android:textColor="@color/theme_tx_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/control_timing_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/timing_image"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="6dp"
                    android:text="@string/close"
                    android:textColor="@color/lb_tx"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/control_timing_li2"
                android:background="@color/theme_line_color" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/control_timing_li2"
                android:background="@color/theme_line_color" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>